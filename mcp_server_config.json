{
  "mcpServers": {
    "bash-tools": {
      "name": "Bash.d Comprehensive Tools Server",
      "version": "1.0.0",
      "description": "Comprehensive OpenAI-compatible tool suite with 100+ tools for AI agents",
      "command": "python",
      "args": ["-m", "tools.mcp_server"],
      "env": {
        "PYTHONPATH": "${workspaceRoot}",
        "BW_SESSION": "${env:BW_SESSION}"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "settings": {
        "bitwarden_integration": true,
        "auto_discover_tools": true,
        "tool_categories": [
          "filesystem",
          "text",
          "api_http",
          "bitwarden",
          "git",
          "data",
          "docker",
          "monitoring"
        ],
        "rate_limit": {
          "enabled": true,
          "requests_per_minute": 100
        }
      }
    },
    "github": {
      "name": "GitHub MCP Server",
      "version": "1.0.0",
      "description": "Official GitHub MCP server for repository operations",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      },
      "capabilities": {
        "tools": true,
        "resources": true
      }
    },
    "filesystem": {
      "name": "Filesystem MCP Server",
      "version": "1.0.0",
      "description": "Local filesystem operations via MCP",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${workspaceRoot}"],
      "capabilities": {
        "tools": true,
        "resources": true
      }
    },
    "openai-compat": {
      "name": "OpenAI-Compatible Proxy (bashd)",
      "version": "1.0.0",
      "description": "OpenAI-compatible endpoint backed by OpenRouter via Cloudflare Workers",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-openai"],
      "env": {
        "OPENAI_BASE_URL": "https://bashd.cloudcurio.workers.dev/v1",
        "OPENAI_API_KEY": "local"
      },
      "capabilities": {
        "tools": false,
        "resources": false,
        "prompts": true
      },
      "settings": {
        "default_model": "meta-llama/llama-3.2-3b-instruct:free",
        "provider": "openrouter-free-via-cloudflare",
        "allowed_models": [
          "meta-llama/llama-3.2-3b-instruct:free",
          "google/gemma-2-9b-it:free",
          "mistralai/mistral-7b-instruct:free",
          "google/gemini-2.0-flash-lite-preview-02-05:free"
        ]
      }
    }
  },
  "defaults": {
    "timeout": 30000,
    "retryAttempts": 3,
    "logLevel": "info"
  }
}
