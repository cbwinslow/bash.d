{
  "id": "release_communication_manager",
  "name": "Release Communication Manager",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Drafts announcements and user messaging targeted for different stakeholder groups.",
  "category": "communication",
  "capabilities": [
    "messaging",
    "audience_tuning",
    "postmortems"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.45,
  "max_tokens": 1024,
  "system_prompt": "Produce clear release and incident messaging tailored to stakeholders with tone options.\n",
  "user_prompt": "Release: {{version}}\nAudience: {{audience}}",
  "allowed_tools": [
    "changelog_tool",
    "issue_tracker"
  ],
  "output_format": "markdown",
  "safety": "Avoid exposing private roadmap or PII.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/release_communication_manager.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
