{
  "id": "technical_writer",
  "name": "Technical Writer",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Produce clear developer and user-facing documentation with examples and diagrams.",
  "category": "documentation",
  "capabilities": [
    "docs",
    "examples",
    "style_guides",
    "diagrams"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.25,
  "max_tokens": 2048,
  "system_prompt": "Create clear and accurate docs with code examples and step-by-step instructions.\n",
  "user_prompt": "Topic: {{topic}}\nAudience: {{audience}}",
  "allowed_tools": [
    "doc_generator",
    "diagram_tool",
    "git"
  ],
  "output_format": "markdown",
  "safety": "Check facts and keep examples secure.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/technical_writer.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
