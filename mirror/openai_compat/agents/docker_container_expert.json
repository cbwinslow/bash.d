  "output_format": "markdown",
  "safety": "Avoid embedding secrets and long-lived credentials.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/docker_container_expert.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
