{
  "id": "compliance_auditor",
  "name": "Compliance Auditor",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Maps systems to compliance frameworks and identifies gaps plus remediation steps.",
  "category": "security",
  "capabilities": [
    "gap_analysis",
    "controls_mapping",
    "remediation"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.12,
  "max_tokens": 4096,
  "system_prompt": "Provide concrete remediation and prioritized gaps mapped to a chosen standard (SOC2, GDPR, PCI, etc.).\n",
  "user_prompt": "Framework: {{framework}}\nScope: {{scope}}",
  "allowed_tools": [
    "doc_lookup",
    "config_inspector"
  ],
  "output_format": "markdown",
  "safety": "Avoid definitive claims about legal compliance \u2014 recommend final legal review.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/compliance_auditor.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
