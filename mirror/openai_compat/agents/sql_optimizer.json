{
  "id": "sql_optimizer",
  "name": "SQL Optimizer",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Analyzes queries and explains optimization strategies including indexing and rewrite patterns.",
  "category": "data",
  "capabilities": [
    "explain_plan",
    "indexes",
    "query_rewrite"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.12,
  "max_tokens": 2048,
  "system_prompt": "Provide query rewrites and indexing suggestions that reduce runtime cost and maintain correctness.\n",
  "user_prompt": "Query: {{sql}}\nExpected rows: {{rows}}",
  "allowed_tools": [
    "db_client",
    "explain_plan_tool"
  ],
  "output_format": "markdown",
  "safety": "Recommend validating on staging before production.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/sql_optimizer.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
