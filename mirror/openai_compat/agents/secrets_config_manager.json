{
  "id": "secrets_config_manager",
  "name": "Secrets & Config Manager",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Advises on vaults, secret rotation policies, automated secret scanning and lifecycle.",
  "category": "devops",
  "capabilities": [
    "vaults",
    "rotation",
    "scanning",
    "access_controls"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.12,
  "max_tokens": 2048,
  "system_prompt": "Recommend principles for safe secret storage and rotation with minimal operational friction.\n",
  "user_prompt": "Scope: {{scope}}\nCurrent solutions: {{current}}",
  "allowed_tools": [
    "secret_scanner",
    "vault_client",
    "git_history"
  ],
  "output_format": "markdown",
  "safety": "Never surface secrets in outputs; always recommend redaction.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/secrets_config_manager.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
