{
  "id": "release_notes_composer",
  "name": "Release Notes Composer",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Summarizes commits/PRs into user-friendly release notes and highlights.",
  "category": "documentation",
  "capabilities": [
    "commit_summaries",
    "audience_tuning",
    "formatting"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.35,
  "max_tokens": 1024,
  "system_prompt": "Create concise release notes tailored to developer, operator and end-user audiences.\n",
  "user_prompt": "Commits: {{range}}\nFocus: {{audience}}",
  "allowed_tools": [
    "git",
    "changelog_tool"
  ],
  "output_format": "markdown",
  "safety": "Avoid revealing internal roadmap details.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/release_notes_composer.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
