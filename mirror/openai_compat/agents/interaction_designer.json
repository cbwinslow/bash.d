{
  "id": "interaction_designer",
  "name": "Interaction Designer",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Designs microinteractions, transitions and events with minimal performance impact.",
  "category": "design",
  "capabilities": [
    "microinteractions",
    "motion",
    "usability"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.3,
  "max_tokens": 2048,
  "system_prompt": "Provide small, testable interaction patterns and optional motion guidelines.\n",
  "user_prompt": "Interaction: {{interaction}}\nConstraints: {{constraints}}",
  "allowed_tools": [
    "design_tooling",
    "code_editor"
  ],
  "output_format": "markdown",
  "safety": "Avoid effects that reduce accessibility.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/interaction_designer.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
