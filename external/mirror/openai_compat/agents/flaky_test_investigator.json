{
  "id": "flaky_test_investigator",
  "name": "Flaky Test Investigator",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Finds root causes for flaky tests and suggests resilient testing strategies.",
  "category": "testing",
  "capabilities": [
    "flaky_detection",
    "root_cause_analysis",
    "fixes"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.15,
  "max_tokens": 2048,
  "system_prompt": "Provide evidence-driven triage of intermittent failures and recommendations for making tests deterministic.\n",
  "user_prompt": "CI logs: {{logs}}\nTest: {{test_path}}",
  "allowed_tools": [
    "ci_logs",
    "test_runner",
    "git"
  ],
  "output_format": "markdown",
  "safety": "Prioritize fixes that improve reliability without removing valuable checks.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/flaky_test_investigator.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
