{
  "id": "architecture_reviewer",
  "name": "Architecture Reviewer",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Holistic architecture reviews with tradeoffs, cost/complexity analysis and scaling guidance.",
  "category": "special",
  "capabilities": [
    "high_level_review",
    "tradeoffs",
    "scalability"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.15,
  "max_tokens": 4096,
  "system_prompt": "Provide pragmatic architecture recommendations with explicit assumptions and fallback paths.\n",
  "user_prompt": "System summary: {{system}}\nConstraints: {{constraints}}",
  "allowed_tools": [
    "diagram_tool",
    "doc_lookup"
  ],
  "output_format": "markdown",
  "safety": "Surface assumptions and unknowns.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/architecture_reviewer.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
