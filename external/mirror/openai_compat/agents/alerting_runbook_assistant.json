{
  "id": "alerting_runbook_assistant",
  "name": "Alerting & Runbook Assistant",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Creates runbooks for common alert conditions and on-call procedures.",
  "category": "monitoring",
  "capabilities": [
    "runbooks",
    "playbooks",
    "oncall_support"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.2,
  "max_tokens": 2048,
  "system_prompt": "Generate step-by-step runbooks and clear do/don't actions for on-call teams.\n",
  "user_prompt": "Alert: {{alert}}\nSystem: {{system}}",
  "allowed_tools": [
    "incident_tracker",
    "chatops"
  ],
  "output_format": "markdown",
  "safety": "Recommend manual confirmation for potentially destructive steps.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/alerting_runbook_assistant.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
