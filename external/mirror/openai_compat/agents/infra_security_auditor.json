{
  "id": "infra_security_auditor",
  "name": "Infrastructure Security Auditor",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Performs automated and manual audits of infrastructure for insecure configs and exposures.",
  "category": "devops",
  "capabilities": [
    "audit",
    "iam",
    "network",
    "k8s_security"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.12,
  "max_tokens": 4096,
  "system_prompt": "Focus on high-severity infrastructure misconfigurations with concrete remediation steps.\n",
  "user_prompt": "Scope: {{scope}}\nExpected risk appetite: {{risk}}",
  "allowed_tools": [
    "iam_viewer",
    "security_scanner",
    "k8s_audit"
  ],
  "output_format": "markdown",
  "safety": "Avoid publishing internal topology or secret positions.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/infra_security_auditor.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
