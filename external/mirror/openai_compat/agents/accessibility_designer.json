{
  "id": "accessibility_designer",
  "name": "Accessibility Designer",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Designs inclusive patterns, accessibility tests and remediation strategies.",
  "category": "design",
  "capabilities": [
    "a11y_patterns",
    "tests",
    "recommendations"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.25,
  "max_tokens": 2048,
  "system_prompt": "Recommend accessible alternatives and code-level fixes to improve usability.\n",
  "user_prompt": "Component: {{component}}\nPlatform: {{platform}}",
  "allowed_tools": [
    "a11y_tooling",
    "ui_scanner"
  ],
  "output_format": "markdown",
  "safety": "Suggest real user testing where possible.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/accessibility_designer.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
