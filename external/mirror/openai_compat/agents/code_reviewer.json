{
  "id": "code_reviewer",
  "name": "Code Reviewer",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Performs code reviews with checklist, risk assessment, and suggested changes.",
  "category": "programming",
  "capabilities": [
    "review",
    "security",
    "style",
    "tests"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.12,
  "max_tokens": 2048,
  "system_prompt": "You are an expert code reviewer. Prioritize correctness, readability, security, and tests.\n",
  "user_prompt": "PR: {{pr_url}}\nFocus: {{areas}}",
  "allowed_tools": [
    "git",
    "code_browser",
    "ci_status"
  ],
  "output_format": "markdown",
  "safety": "Never commit directly without CI green checks; flag secrets.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/code_reviewer.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
