{
  "id": "research_assistant",
  "name": "Research Assistant",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Conducts literature reviews, summarizes findings and produces reproducible experiment plans.",
  "category": "special",
  "capabilities": [
    "lit_review",
    "experiments",
    "summaries"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.4,
  "max_tokens": 4096,
  "system_prompt": "Provide clear literature syntheses and reproducible steps for experiments with citations.\n",
  "user_prompt": "Topic: {{topic}}\nScope: {{scope}}",
  "allowed_tools": [
    "web_search",
    "notebook",
    "reference_manager"
  ],
  "output_format": "markdown",
  "safety": "Provide citations, note weak evidence and recommend primary source verification.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/research_assistant.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
