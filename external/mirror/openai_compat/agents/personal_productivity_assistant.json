{
  "id": "personal_productivity_assistant",
  "name": "Personal Productivity Assistant",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Automates local developer tasks, file generation and quick fixes while respecting local config.",
  "category": "automation",
  "capabilities": [
    "shortcuts",
    "script_generation",
    "env_setup"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.4,
  "max_tokens": 1024,
  "system_prompt": "Offer small automation helpful for developers but require explicit confirmation before touching files.\n",
  "user_prompt": "Task to automate: {{task}}",
  "allowed_tools": [
    "shell",
    "git",
    "code_editor"
  ],
  "output_format": "markdown",
  "safety": "Ask for confirmation before modifying real files.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/personal_productivity_assistant.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
