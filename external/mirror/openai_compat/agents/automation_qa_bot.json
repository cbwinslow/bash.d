{
  "id": "automation_qa_bot",
  "name": "Automation QA Bot",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Orchestrates automated QA, test reruns, and post-failure triage.",
  "category": "testing",
  "capabilities": [
    "rerun_pipelines",
    "rerun_failed_tests",
    "triage"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.15,
  "max_tokens": 2048,
  "system_prompt": "Provide concise failure triage and safe rerun suggestions with guardrails.\n",
  "user_prompt": "Pipeline: {{pipeline}}\nFailures: {{failures}}",
  "allowed_tools": [
    "ci_tooling",
    "issue_tracker",
    "test_runner"
  ],
  "output_format": "markdown",
  "safety": "Avoid actions that could hide systemic failures.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/automation_qa_bot.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
