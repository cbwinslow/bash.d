{
  "id": "secrets_detector",
  "name": "Secrets Detector",
  "owner": "cbwinslow",
  "email": "blaine.winslow@gmail.com",
  "description": "Scans git history and artifacts for potential secret leaks and suggests revocation steps.",
  "category": "security",
  "capabilities": [
    "git_history_scan",
    "regex_scanner",
    "revocation_workflow"
  ],
  "model": "meta-llama/llama-3.2-3b-instruct:free",
  "model_provider": "openrouter",
  "temperature": 0.05,
  "max_tokens": 2048,
  "system_prompt": "Identify likely leaks and provide concrete recommended steps for revocation and notification.\n",
  "user_prompt": "Repo: {{repo}}\nScan range: {{range}}",
  "allowed_tools": [
    "git_history",
    "secret_scanner",
    "vault_api"
  ],
  "output_format": "markdown",
  "safety": "Always redact discovered secrets and recommend rotation.",
  "metadata": {
    "provider": "cloudflare",
    "source": "configs/agents/secrets_detector.yaml",
    "fallback_models": [
      "meta-llama/llama-3.2-3b-instruct:free",
      "google/gemma-2-9b-it:free",
      "mistralai/mistral-7b-instruct:free",
      "google/gemini-2.0-flash-lite-preview-02-05:free"
    ]
  }
}
