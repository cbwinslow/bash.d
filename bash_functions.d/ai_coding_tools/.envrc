# AI Tools Environment Configuration
# This file is automatically loaded by direnv when you enter this directory

# Set AI tools directory
export AI_TOOLS_DIR="$(pwd)"

# Load Node.js version if NVM is available
if [[ -f "$HOME/.nvm/nvm.sh" ]]; then
  export NVM_DIR="$HOME/.nvm"
  source "$NVM_DIR/nvm.sh"
  nvm use 20 >/dev/null 2>&1 || nvm use 18 >/dev/null 2>&1 || nvm use 16 >/dev/null 2>&1 || true
fi

# Add AI tools to PATH
export PATH="$AI_TOOLS_DIR:$PATH"

# Quick aliases for AI tools (no installation required)
alias forgecode='npx forgecode@latest'
alias qwen-code='npx @qwen-code/qwen-code@latest'
alias codex='npx @openai/codex@latest'
alias kilo-code='npx @kilocode/cli@latest'
alias cline='npx cline@latest'
alias continue='npx @continuedev/continue@latest'

# Installation functions (lazy loading)
alias install-forgecode='source forgecode_latest.sh && forgecode_install'
alias install-qwen-code='source qwen_code_latest.sh && qwen_code_install'
alias install-codex='source codex_latest.sh && codex_install'
alias install-kilo-code='source kilo_code_latest.sh && kilo_code_install'
alias install-cline='source cline_latest.sh && cline_install'
alias install-continue='source continue_latest.sh && continue_install'

# Master installer
alias ai-tools='source ai_tools_install.sh && ai_tools_install'

# Status check
alias ai-status='source ai_tools_install.sh && ai_tools_install check'

echo "ðŸ¤– AI Tools environment loaded!"
echo "Available: forgecode, qwen-code, codex, kilo-code, cline, continue"
echo "Install: install-forgecode, install-qwen-code, etc."
echo "Management: ai-tools, ai-status"